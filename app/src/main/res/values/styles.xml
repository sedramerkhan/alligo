<resources>

    <!-- H1 -->
    <style name="TextH1">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <!-- H2 -->
    <style name="TextH2">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <!-- H3 -->
    <style name="TextH3">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <!-- H4 -->
    <style name="TextH4">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <!-- H5 -->
    <style name="TextH5">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">600</item>
    </style>


    <!-- Body Large Semi bold -->
    <style name="TextBodyLargeSemiBold">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <!-- Body Medium Semi Bold -->
    <style name="TextBodyMediumSemiBold">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <!-- Body Large Medium -->
    <style name="TextBodyLargeMedium">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- Body Medium Medium -->
    <style name="TextBodyMediumMedium">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <!-- Body Large -->
    <style name="TextBodyLargeRegular">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Body Medium -->
    <style name="TextBodyMediumRegular">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Body Small -->
    <style name="TextBodySmallRegular">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Body XSmall -->
    <style name="TextBodyXSmallRegular">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Button -->
    <style name="FilledButton">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/filled_button_background</item>
    </style>

    <style name="FilledButtonSmall">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/filled_button_background</item>
    </style>


    <style name="EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ibm_medium</item>
        <item name="android:textColor">@color/edit_text_text_color</item>
        <item name="android:textColorHint">@color/edit_text_text_color</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>


</resources>