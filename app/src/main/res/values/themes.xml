    <!-- Body Large -->
    <style name="TextBodyLargeRegular">
        <item name="android:fontFamily">@font/ibm</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Body Medium -->
